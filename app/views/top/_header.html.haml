.header
  .header__inner
    .mainHeader
      .mainHeader__icon
        = link_to root_path do
          = image_tag 'logo/logo.png', :size =>'140x41'

      .searchBox
        %input.searchBox__input{:name => "search", :placeholder => "キーワードから探す", :type => "text"}/
        .searchBox__btn
          = link_to'#' do
            = image_tag'icon/icon-search 1.png', :size =>'20x20',class: 'searchBox__btn--icon'

    .sideHeader
      %ul.sideHeader__left
        %li.sideHeader__left--items
          カテゴリー
        %li.sideHeader__left--items
          ブランド
      -if @path.is('top#index')
        %ul.sideHeader__right
          -if user_signed_in?
            %li.sideHeader__right--log
              = link_to user_path(current_user.id) ,class: 'login-btn' do
                マイページ
          -else
            %li.sideHeader__right--log
              = link_to new_user_session_path ,class: 'login-btn' do
                ログイン
            %li.sideHeader__right--new
              = link_to new_user_registration_path ,class: 'new-btn' do
                新規会員登録